<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white_stroke_black"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_title_today_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today Report"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_today_report"
                android:layout_marginTop="16dp"
                android:text="Target Calories"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_calories"
                android:layout_marginTop="4dp"
                android:text="1,284"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_title_daily_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_today_report"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/tv_title_calories"
                android:text="Daily Calories"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_daily_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_daily_calories"
                android:layout_alignLeft="@id/tv_title_daily_calories"
                android:layout_marginTop="4dp"
                android:text="1,284"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv_calories">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ProgressBar
                        android:id="@+id/pb_fat"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/custom_progressbar"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="65"
                        android:progressDrawable="@drawable/circular_progressbar"
                        android:progressTint="@color/yellow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_fat"
                            style="@style/TextViewHome.Content"
                            android:layout_gravity="center"
                            android:text="20%"/>

                        <TextView
                            android:id="@+id/tv_title_fat"
                            style="@style/TextViewHome"
                            android:layout_gravity="center"
                            android:text="Fat" />

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/pb_pro"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/custom_progressbar"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="65"
                        android:progressDrawable="@drawable/circular_progressbar"
                        android:progressTint="@color/blue" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_pro"
                            style="@style/TextViewHome.Content"
                            android:layout_gravity="center"
                            android:text="20%"/>

                        <TextView
                            style="@style/TextViewHome"
                            android:layout_gravity="center"
                            android:text="Pro" />

                    </LinearLayout>
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/pb_carb"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/custom_progressbar"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="65"
                        android:progressDrawable="@drawable/circular_progressbar"
                        android:progressTint="@color/purple" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_carb"
                            style="@style/TextViewHome.Content"
                            android:layout_gravity="center"
                            android:text="20%"/>

                        <TextView
                            style="@style/TextViewHome"
                            android:layout_gravity="center"
                            android:text="Carb" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_meal_by_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>