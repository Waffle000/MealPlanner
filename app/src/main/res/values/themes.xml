<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qtnapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextPrimary" >
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_rounded_white_stroke_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Qtnapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TextViewHome.Content" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHome" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Qtnapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Qtnapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>